// Sample script, how to define different security codebases for javaScript.
grant codebase "file:${user.dir}/bin/main/ALLOW_FILE_IO_JAVASCRIPT" {
    permission java.lang.RuntimePermission "rhino.accessible.java.io";
    permission java.io.FilePermission "tmp", "read";
};

grant codebase "file:${user.dir}/bin/main/ALLOW_LOGGER_JAVASCRIPT" {
    permission java.lang.RuntimePermission "rhino.accessible.java.util.logging";
};
grant codebase "file:${user.dir}/bin/main/ALLOW_SECURITY" {
    permission java.lang.RuntimePermission "rhino.accessible.java.security";
    permission java.lang.RuntimePermission "rhino.accessible.com.example.securitytest";
    permission java.lang.RuntimePermission "rhino.visible.com";
    permission java.lang.RuntimePermission "rhino.visible.com.example";
    permission java.lang.RuntimePermission "rhino.visible.com.example.securitytest";
    permission java.lang.RuntimePermission "rhino.visible.com.example.securitytest.*";
};

grant {
    // grant every script access to java.lang and java.util (but not to java.util.*)
    permission java.lang.RuntimePermission "rhino.accessible.java.lang";
    permission java.lang.RuntimePermission "rhino.accessible.java.util";
    permission java.lang.RuntimePermission "rhino.visible.java";
    permission java.lang.RuntimePermission "rhino.visible.java.*";

};
